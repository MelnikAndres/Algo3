<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="100.0" styleClass="contenedor" type="VBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="tituloContenedor"  alignment="CENTER">
         <children>
            <Label fx:id="titulo" maxWidth="1.7976931348623157E308" styleClass="titulo" text="(Sin Titulo)" wrapText="true" HBox.hgrow="ALWAYS" />
            <CheckBox fx:id="completada" mnemonicParsing="false">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <font>
                  <Font size="8.0" />
               </font>
            </CheckBox>
         </children>
      </HBox>
      <Label fx:id="horaInicial" text="-" />
      <Label fx:id="horaFinal" text="-" />
      <HBox fx:id="botonesContenedor" alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="botonBorrar" mnemonicParsing="false">
               <graphic>
                  <ImageView  fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Imagenes/borrar.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="botonEditar" mnemonicParsing="false">
               <graphic>
                  <ImageView  fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Imagenes/edit.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="botonAlarma" layoutX="76.0" layoutY="10.0" mnemonicParsing="false">
               <graphic>
                  <ImageView  fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Imagenes/alarma.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</fx:root>
